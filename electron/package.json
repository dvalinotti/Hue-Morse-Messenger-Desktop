{
  "name": "hmm-desktop",
  "version": "0.1.0",
  "main": "public\\electron.js",
  "homepage": ".\\",
  "private": true,
  "dependencies": {
    "@chakra-ui/core": "^0.3.4",
    "@emotion/core": "^10.0.21",
    "@emotion/styled": "^10.0.17",
    "bootstrap": "^4.3.1",
    "electron": "^18.3.7",
    "electron-is-dev": "^1.1.0",
    "emotion-theming": "^10.0.19",
    "react": "^16.10.2",
    "react-bootstrap": "^1.0.0-beta.14",
    "react-dom": "^16.10.2",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "react-spinners": "^0.6.1",
    "win-node-env": "^0.4.0"
  },
  "scripts": {
    "electron": "electron .",
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"npm start\" \"cd ../api & npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build",
    "electron-pack": "npm run build -mw"
  },
  "build": {
    "appId": "com.hmm-desktop",
    "productName": "Hue Morse Messenger Desktop Client",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "rescripts": [
    "env"
  ],
  "devDependencies": {
    "@rescripts/cli": "0.0.12",
    "@rescripts/rescript-env": "0.0.10",
    "concurrently": "^5.0.0",
    "dotenv": "^8.1.0",
    "electron-builder": "^21.2.0",
    "electron-renderer": "^2.0.4",
    "typescript": "^3.6.4",
    "wait-on": "^3.3.0"
  }
}
